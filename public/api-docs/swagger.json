{
  "openapi": "3.0.0",
  "info": {
    "title": "Book E-commerce API",
    "version": "1.0.0",
    "description": "API documentation for Book E-commerce application"
  },
  "servers": [
    {
      "url": "/api",
      "description": "API Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Catalog": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Auto-generated MongoDB ID"
          },
          "name": {
            "type": "string",
            "description": "Tên catalog"
          },
          "description": {
            "type": "string",
            "description": "Mô tả catalog"
          }
        }
      },
      "Product": {
        "type": "object",
        "required": ["name", "price", "catalogId"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Auto-generated MongoDB ID"
          },
          "name": {
            "type": "string",
            "description": "Tên sản phẩm"
          },
          "description": {
            "type": "string",
            "description": "Mô tả sản phẩm"
          },
          "price": {
            "type": "number",
            "description": "Giá sản phẩm"
          },
          "stock": {
            "type": "number",
            "description": "Số lượng tồn kho"
          },
          "catalogId": {
            "type": "string",
            "description": "ID của catalog"
          },
          "image": {
            "type": "string",
            "description": "URL hình ảnh sản phẩm"
          }
        }
      },
      "Invoice": {
        "type": "object",
        "required": ["orderId", "amount"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Auto-generated MongoDB ID"
          },
          "orderId": {
            "type": "string",
            "description": "ID của đơn hàng"
          },
          "amount": {
            "type": "number",
            "description": "Tổng tiền hóa đơn"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "paid", "cancelled"],
            "description": "Trạng thái hóa đơn"
          },
          "paymentMethod": {
            "type": "string",
            "description": "Phương thức thanh toán"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Thời gian tạo hóa đơn"
          }
        }
      },
      "Coupon": {
        "type": "object",
        "required": ["code", "discount"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Auto-generated MongoDB ID"
          },
          "code": {
            "type": "string",
            "description": "Mã coupon"
          },
          "discount": {
            "type": "number",
            "description": "Giảm giá (phần trăm hoặc số tiền)"
          },
          "type": {
            "type": "string",
            "enum": ["percentage", "fixed"],
            "description": "Loại giảm giá"
          },
          "validUntil": {
            "type": "string",
            "format": "date-time",
            "description": "Ngày hết hạn"
          },
          "isActive": {
            "type": "boolean",
            "description": "Trạng thái hoạt động"
          }
        }
      },
      "Order": {
        "type": "object",
        "required": ["customerId", "products", "totalAmount"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Auto-generated MongoDB ID"
          },
          "customerId": {
            "type": "string",
            "description": "ID của khách hàng"
          },
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "productId": {
                  "type": "string"
                },
                "quantity": {
                  "type": "number"
                },
                "price": {
                  "type": "number"
                }
              }
            }
          },
          "totalAmount": {
            "type": "number",
            "description": "Tổng tiền đơn hàng"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "completed", "cancelled"],
            "description": "Trạng thái đơn hàng"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Thời gian tạo đơn hàng"
          },
          "ISBN": {
            "type": "string",
            "description": "Mã số sách quốc tế"
          }
        }
      },
      "Review": {
        "type": "object",
        "required": ["productId", "userId", "rating", "comment"],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Auto-generated MongoDB ID"
          },
          "productId": {
            "type": "string",
            "description": "ID của sản phẩm"
          },
          "userId": {
            "type": "string",
            "description": "ID của người dùng"
          },
          "rating": {
            "type": "number",
            "minimum": 1,
            "maximum": 5,
            "description": "Đánh giá (1-5 sao)"
          },
          "comment": {
            "type": "string",
            "description": "Nội dung đánh giá"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Thời gian tạo đánh giá"
          }
        }
      },
      "User": {
        "type": "object",
        "required": ["fullName", "email", "password"],
        "properties": {
          "fullName": { "type": "string", "description": "Họ tên người dùng" },
          "email": { "type": "string", "description": "Email người dùng" },
          "password": { "type": "string", "description": "Mật khẩu người dùng" }
        }
      }
    }
  },
